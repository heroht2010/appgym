<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentProduct">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:padding="15dp"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá sản phẩm"
                android:fontFamily="@font/open_sans_light"
                android:textColor="#000"
                android:textSize="24dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <TextView android:layout_height="200dp"
            android:layout_width="match_parent"
            android:background="#fff"
            android:id="@+id/txtdesproductrating"
            android:hint="Đánh giá sản phẩm"
            android:fontFamily="@font/open_sans_light"
            android:textColor="#000"
            android:padding="5dp"
            android:editable="true"/>
        </RelativeLayout>
        <RatingBar android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:id="@+id/ratingstarproduct"
            android:progressTint="#FFD700"
            android:secondaryProgressTint="#000"
            android:layout_gravity="center"/>
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button android:layout_height="40dp"
                android:layout_width="150dp"
                android:background="@drawable/custom_btn_register"
                android:text="Đánh giá"
                android:id="@+id/btncomment"
                android:fontFamily="@font/open_sans_light"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>