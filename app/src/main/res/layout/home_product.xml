<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp">
        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="200dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="#00FFFFFF" />
            <RelativeLayout android:layout_height="58dp"
                android:layout_width="match_parent"
                android:background="#000"
                android:layout_gravity="bottom"
                android:alpha="0.3"/>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:padding="5dp">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Whey Protein đạm H2PTC"
                    android:textColor="#fff"
                    android:id="@+id/txtname_product"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingbarProduct"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:secondaryProgressTint="#000"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="fasfasfasf"
                    android:textColor="#fff"
                    android:id="@+id/txtprice_product"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>