<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_height="150dp"
        android:layout_width="180dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardview">
    <ImageView android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/productlist_imggrid"/>

    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asfasasfa"
        android:id="@+id/txtNameProductgrid"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="14dp"
        android:textColor="#ef473a"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_below="@id/cardview"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbarProduct"
        android:numStars="5"
        android:progressTint="#FFD700"
        android:secondaryProgressTint="#000"
        android:layout_below="@id/txtNameProductgrid"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asfasasfa"
        android:id="@+id/txtpriceProductgrid"
        android:fontFamily="@font/open_sans_light"
        android:textSize="13dp"
        android:textColor="#ef473a"
        android:layout_marginRight="10dp"
        android:layout_below="@id/ratingbarProduct"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asfasasfa"
        android:id="@+id/txtsaleProductgrid"
        android:fontFamily="@font/open_sans_light"
        android:textSize="10dp"
        android:textColor="#000"
        android:layout_below="@id/ratingbarProduct"
        android:layout_toRightOf="@id/txtpriceProductgrid"/>
    <ImageView android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingbarProduct"
        android:layout_toRightOf="@id/txtpriceProductgrid"
        android:background="@drawable/draw_lineblack"
        android:layout_marginTop="7dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asfasasfa"
        android:id="@+id/txtdetailProductgrid"
        android:fontFamily="@font/open_sans_light"
        android:textSize="10dp"
        android:textColor="#000"
        android:layout_below="@id/txtpriceProductgrid"
        />
</RelativeLayout>