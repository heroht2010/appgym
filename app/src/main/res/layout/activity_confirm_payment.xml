<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="#fff">
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Thanh toán"
            android:fontFamily="@font/open_sans_light"
            android:textSize="18dp"
            />
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="5dp">
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_on_black_24dp"/>
                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ nhận hàng"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="#000"
                        android:layout_marginBottom="5dp"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Viết Nam | 0837481485"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="#000"
                        android:id="@+id/txtnameandphone"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ nhận hàng"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="#000"
                        android:id="@+id/txtaddr"/>

                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="25dp"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                >
                <ImageView android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgpaymentproduct"
                    android:background="@drawable/wheye"
                    android:layout_marginRight="10dp"
                    />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtnamepaymentpro"
                    android:text="Xtend Pro Whey"
                    android:textColor="#000"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_toRightOf="@id/imgpaymentproduct"
                    />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txttitleflavorpaymentpro"
                    android:text="Hương vị: "
                    android:textColor="#000"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_toRightOf="@id/imgpaymentproduct"
                    android:layout_below="@id/txtnamepaymentpro"
                    />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtflavorpaymentpro"
                    android:text="CHOCOLATE"
                    android:textColor="#000"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_toRightOf="@id/txttitleflavorpaymentpro"
                    android:layout_below="@id/txtnamepaymentpro"
                    />
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtpricepro"
                    android:text="1.200.200 VNĐ"
                    android:textColor="#000"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_toRightOf="@id/imgpaymentproduct"
                    android:layout_below="@id/txttitleflavorpaymentpro"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#17EF473A"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Đơn vị vận chuyển"
                    android:textColor="#ef473a"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Vận Chuyển Nhanh"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_light"
                            android:text="Giao Hàng Nhanh"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_light"
                            android:text="Nhận hàng vào 5 Th06 - 7 Th08"
                            android:textColor="#000" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/open_sans_light"
                        android:text="40.000 VNĐ"
                        android:textColor="#000"
                        android:id="@+id/txtdeliver"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                >
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số tiền (1 sản phẩm):"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="15dp"
                    android:layout_marginRight="115dp"
                    android:id="@+id/txtcountproductprice"/>

                <TextView
                    android:id="@+id/txtsumprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txtcountproductprice"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="1.200.000 VNĐ"
                    android:textColor="#ef473a"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:background="@drawable/ic_baseline_monetization_on_24"
                    android:layout_marginRight="2dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="#000"
                    android:layout_marginRight="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng >"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="#000"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="155dp">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Tổng tiền hàng"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="12dp"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Tổng chi phí vận chuyển"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="12dp"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Tổng thanh toán"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="15dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1.200.200 VNĐ"
                        android:id="@+id/txtpricepaymentpro"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="12dp"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="40.000 VNĐ"
                        android:id="@+id/txtpricedeliver"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="12dp"/>
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1.240.200 VNĐ"
                        android:fontFamily="@font/open_sans_light"
                        android:textSize="15dp"
                        android:id="@+id/sumpaymenta"
                        android:textColor="#ef473a"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_gravity="bottom"
        android:gravity="right"
        >
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp">
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Tổng thanh toán"
                android:fontFamily="@font/open_sans_light"
                android:textColor="#000"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.200.200 VNĐ"
                android:fontFamily="@font/open_sans_bold"
                android:textStyle="bold"
                android:textColor="#ef473a"
                android:id="@+id/sumpaymentb"/>
        </LinearLayout>
        <Button android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:text="Đặt hàng"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#fff"
            android:background="#ef473a"
            android:textStyle="bold"
            android:id="@+id/btnpurchase"/>
    </LinearLayout>
</FrameLayout>