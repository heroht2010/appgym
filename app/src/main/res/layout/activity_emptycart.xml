<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Giỏ hàng"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20dp"/>
        </RelativeLayout>

        <ImageView android:layout_height="300dp"
            android:layout_width="match_parent"
            android:background="@drawable/emptycart"/>
        <Button android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_btn_status_delivering"
            android:text="Đăng nhập"
            android:fontFamily="@font/open_sans_light"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/btnempty"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#fff"
        >


        <CheckBox
            android:id="@+id/cballproductcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn tất cả"
            android:buttonTint="#ef473a"
            android:fontFamily="@font/open_sans_light"
            />

        <TextView
            android:id="@+id/txtpricecart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng tiền:"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/txtpriceallcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#ef473a"
            android:text="0 VNĐ" />

        <Button
            android:id="@+id/btnbuycart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:fontFamily="@font/open_sans_bold"
            android:textStyle="bold"
            android:background="#ef473a"
            android:text="Mua hàng" />
    </LinearLayout>
</FrameLayout>