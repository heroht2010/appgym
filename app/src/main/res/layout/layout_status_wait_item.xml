<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/imgstatuswait"
        android:background="#fff"></ImageView>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnamestatuswait"
        android:fontFamily="@font/open_sans_light"
        android:textColor="#000"
        android:textSize="15dp"
        android:text="Whey Gold Standar"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgstatuswait"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtflavorstatuswait"
        android:text="Hương vị: CHOCOLATE"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans_light"
        android:layout_below="@id/txtnamestatuswait"
        android:layout_toRightOf="@id/imgstatuswait"
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtpricestatuswait"
        android:text="1.200.000 VNĐ"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/open_sans_light"
        android:layout_below="@id/txtflavorstatuswait"
        android:layout_toRightOf="@id/imgstatuswait"
        android:textSize="12dp"
        android:textColor="#ef473a"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CHỜ XÁC NHẬN"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/open_sans_light"
        android:layout_below="@id/txtpricestatuswait"
        android:layout_toRightOf="@id/imgstatuswait"
        android:textSize="15dp"
        android:textColor="#ef473a"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="Số lượng: 2 sản phẩm"
        android:id="@+id/txtcountstatuswait"
        android:layout_below="@id/imgstatuswait"
        android:textColor="#000"
        android:textSize="12dp"
        android:layout_marginTop="10dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="Thành tiền: "
        android:layout_below="@id/imgstatuswait"
        android:layout_toRightOf="@id/txtcountstatuswait"
        android:id="@+id/txttitleprice"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="1.200.000 VNĐ"
        android:layout_below="@id/imgstatuswait"
        android:layout_toRightOf="@id/txttitleprice"
        android:id="@+id/txtpricesumstatuswait"
        android:textColor="#ef473a"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>