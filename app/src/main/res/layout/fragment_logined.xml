<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userprofile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Xin chào, Nam Nguyễn"
                android:id="@+id/txtname_logined"
                android:textColor="#000"
                android:fontFamily="@font/open_sans_light"
                android:textSize="20dp"
                android:padding="15dp"
                android:layout_gravity="center"/>
            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center">
            <androidx.cardview.widget.CardView android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="75dp"
                android:clipToPadding="true"
                >

                <ImageView
                    android:id="@+id/img_logined"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/cardview_shadow_end_color"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản của tôi"
                android:textColor="#000000"
                android:textSize="12dp"
                android:fontFamily="@font/open_sans_light"
                android:layout_marginTop="20dp"
                android:padding="10dp"/>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_person_outline_black_24dp"
                        android:id="@+id/iconuser"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconuser"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Hồ sơ của tôi"
                        android:id="@+id/txtmyprofile"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </RelativeLayout>
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_baseline_departure_board_24"
                        android:id="@+id/iconcar"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconcar"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Đơn hàng của tôi"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/txtmyorder"/>
                </RelativeLayout>
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_heart_border_black_24dp"
                        android:id="@+id/iconheart"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconheart"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Sản phẩm yêu thích"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </RelativeLayout>
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_exit_to_app"
                        android:id="@+id/iconbacktoapp"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconbacktoapp"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Đăng xuất"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/txtlogout_logined"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_light"
                android:padding="10dp"
                android:text="Nhân viên hỗ trợ"
                android:textColor="#000000"
                android:textSize="12dp" />
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_headset_mic_black_24dp"
                        android:id="@+id/iconcall1"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconcall1"
                        android:fontFamily="@font/open_sans_light"
                        android:text="VN GYM Hà Nội - 19001999"
                        android:textColor="#ef473a"
                        android:textSize="14dp"
                        android:id="@+id/txtcontact1"
                        android:layout_marginRight="38dp"/>
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_local_phone_black_24dp"
                        android:layout_toRightOf="@id/txtcontact1"
                        />
                </RelativeLayout>
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_headset_mic_black_24dp"
                        android:id="@+id/iconcall2"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconcall2"
                        android:fontFamily="@font/open_sans_light"
                        android:text="VN GYM Hồ Chí Minh - 19001910"
                        android:textColor="#ef473a"
                        android:textSize="14dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/txtcontact2"/>
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_local_phone_black_24dp"
                        android:layout_toRightOf="@id/txtcontact2"
                        />
                </RelativeLayout>
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_headset_mic_black_24dp"
                        android:id="@+id/iconcall3"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/txtcontact3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toRightOf="@id/iconcall3"
                        android:fontFamily="@font/open_sans_light"
                        android:text="VN GYM Đà Nẵng - 19001817"
                        android:textColor="#ef473a"
                        android:textSize="14dp" />

                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_local_phone_black_24dp"
                        android:layout_toRightOf="@id/txtcontact3"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans_light"
                android:padding="10dp"
                android:text="Cài đặt"
                android:textColor="#000000"
                android:textSize="12dp" />
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_notifications_none_black_24dp"
                        android:id="@+id/iconalert"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iconalert"
                        android:fontFamily="@font/open_sans_light"
                        android:text="Thông báo"
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>