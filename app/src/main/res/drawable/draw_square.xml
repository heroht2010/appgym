<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:width="50dp" android:height="26dp" android:right="6dp">
        <shape>
            <solid android:color="#ef473a"/>
            <corners
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="2dp"/>
        </shape>
    </item>

    <item android:width="17dp" android:height="20dp"
        android:left="50dp">
        <rotate android:fromDegrees="40"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="#ef473a"/>
            </shape>
        </rotate>
    </item>

</layer-list>

